<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noType="Magento\Framework\View\Layout\etc\page_configuration.xsd">
    <head>
        <!-- Load custom CSS for product options -->
        <css src="Sickdaflip_ProductOptionsMedia::css/product-options-media.css" />
    </head>
    <body>
        <!-- Load option modal JavaScript via template -->
        <referenceContainer name="before.body.end">
            <block name="sickdaflip.product.options.media.js"
                   template="Sickdaflip_ProductOptionsMedia::page/js/plugins/option-modal.phtml" />
        </referenceContainer>


        <referenceBlock name="product.info.options.wrapper">
            <!-- Override the main options block template -->
            <referenceBlock name="product.info.options">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Sickdaflip_ProductOptionsMedia::product/view/options/options.phtml</argument>
                </action>

                <!-- Override child block templates -->
                <referenceBlock name="select">
                    <action method="setTemplate">
                        <argument name="template" xsi:type="string">Sickdaflip_ProductOptionsMedia::product/view/options/type/select.phtml</argument>
                    </action>
                </referenceBlock>

                <referenceBlock name="checkable">
                    <action method="setTemplate">
                        <argument name="template" xsi:type="string">Sickdaflip_ProductOptionsMedia::product/composite/fieldset/options/view/checkable.phtml</argument>
                    </action>
                </referenceBlock>
            </referenceBlock>
        </referenceBlock>
    </body>
</page>
