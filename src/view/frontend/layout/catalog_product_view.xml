<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noType="Magento\Framework\View\Layout\etc\page_configuration.xsd">
    <head>
        <!-- Load custom CSS for product options -->
        <css src="Sickdaflip_ProductOptionsMedia::css/product-options-media.css" />
    </head>
    <body>
        <referenceBlock name="product.info.options.wrapper">
            <!-- Remove default product options block -->
            <referenceBlock name="product.info.options" remove="true"/>

            <!-- Add our custom product options block with our templates -->
            <block class="Magento\Catalog\Block\Product\View\Options"
                   name="product.info.options.custom"
                   as="options"
                   template="Sickdaflip_ProductOptionsMedia::product/view/options/options.phtml">
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Select"
                       as="select"
                       template="Sickdaflip_ProductOptionsMedia::product/view/options/type/select.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Select\Checkable"
                       as="checkable"
                       template="Sickdaflip_ProductOptionsMedia::product/composite/fieldset/options/view/checkable.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
