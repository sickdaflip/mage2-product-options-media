<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noType="Magento\Framework\View\Layout\etc\page_configuration.xsd">
    <head>
        <!-- Load custom CSS for product options -->
        <css src="Sickdaflip_ProductOptionsMedia::css/product-options-media.css" />
        <!-- Load custom JS to fix price calculation for "None" radio selection -->
        <script src="Sickdaflip_ProductOptionsMedia::js/product-options-price-fix.js" />
    </head>
    <body>
        <referenceBlock name="product.info.options.wrapper">
            <block class="Magento\Catalog\Block\Product\View\Options" name="product.info.options" as="options" template="Sickdaflip_ProductOptionsMedia::catalog/product/composite/fieldset/options.phtml">
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Select" as="select" template="Sickdaflip_ProductOptionsMedia::product/view/options/type/select.phtml"/>
                <block class="Magento\Catalog\Block\Product\View\Options\Type\Select\Checkable" as="checkable" template="Sickdaflip_ProductOptionsMedia::product/composite/fieldset/options/view/checkable.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
